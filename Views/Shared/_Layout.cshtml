@inject SignInManager<IdentityUser> signInManager;


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="development">
        <link href="~/MyAsset/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/MyAsset/css/styles.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/MyAsset/js/bootstrap.min.js"></script>
        <script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/css/boostrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true">
    </environment>



    <title>@ViewBag.Title</title>
</head>

<body>

    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand glyphicon glyphicon-apple"asp-action="index"asp-controller="home">CODE360</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item active"><a asp-action="index" asp-controller="home"class="nav-link">DashBoard</a></li>
                    <li class="nav-item"><a asp-action="index" asp-controller="home">Students</a></li>
                    <li class="nav-item"><a asp-action="create" asp-controller="home">Create Student</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (signInManager.IsSignedIn(User))
                     {
                        <li>
                            <form method="post" asp-action="logout" asp-controller="account">
                                <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                    Welcome, @User.Identity.Name       Logout

                                </button>
                            </form>
                        </li>
                    }

                    else
                    {
                        <li class="mr-2">
                            <a asp-action="register" asp-controller="account">Register</a>
                        </li>
                        <li>
                            <a asp-action="login" asp-controller="account">Login</a>
                        </li>

                    }


                </ul>

            </div>
        </div>
    </nav>





    <div>
        @RenderBody()
    </div>
    @if (IsSectionDefined("Scripts"))
    {

        @RenderSection("Scripts", required: true)

    }



    <div style=" bottom:0; left:0; width:100%; ">
        <footer id="footer">
            <p>Copyright Code360, © 2020</p>
        </footer>
    </div>

</body>
</html>


