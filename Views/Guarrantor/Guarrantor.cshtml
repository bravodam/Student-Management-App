@model GuarrantorViewModel

@{
    ViewBag.Title = "Create Guarrantor";
}

<section id="breadcrumb">
    <div class="container mt-2">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="index.html" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> DashBoard
                    </a>
                    <a asp-action="index" asp-controller="home" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Students <span class="badge">@_student.GetAllStudents().Count()</span></a>
                    <a asp-action="register" asp-controller="
                     account" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Register <span class="badge">33</span></a>
                    <a asp-action="login" asp-controller="account" class="list-group-item"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span> User Login<span class="badge">203</span></a>
                </div>
                <div class="well">
                    <h4>Disk Space Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                            60%
                        </div>
                    </div>
                    <h4>BanthWidth USed</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                            40%
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <form asp-controller="Home" asp-action="Create" enctype="multipart/form-data" method="post" class="mt-3">

                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Gender"
                                    asp-items="Html.GetEnumSelectList<GenderEnum>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>

                        </div>
                    </div>



                    <div class="form-group row">
                        <label asp-for="HomePhone" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="HomePhone" class="form-control" placeholder="Home Phone" />
                            <span asp-validation-for="HomePhone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="OfficePhone" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="OfficePhone" class="form-control" placeholder="Office Phone" />
                        </div>
                    </div>



                    <div class="form-group row">
                        <label asp-for="CompanyName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                    </div>

                    @*<div class="form-group row">
                        <label asp-for="Nationality" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Nationality" class="form-control" placeholder="Nationality" />
                            <span asp-validation-for="Nationality" class="text-danger"></span>
                        </div>
                    </div>*@


                    <div class="form-group row">
                        <label asp-for="Nationality" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Nationality"
                                    asp-items="Html.GetEnumSelectList<EnumNational>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="Nationality" class="text-danger"></span>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Address" class="form-control" placeholder="Address" />
                        </div>
                    </div>



                  




                    <div class="form-group row">
                        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Gender"
                                    asp-items="Html.GetEnumSelectList<GenderEnum>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>

                        </div>
                    </div>







                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);


            });
        })

    </script>
}

