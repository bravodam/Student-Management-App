@model IEnumerable<StudentClass>

@{

    ViewBag.Title = "Students List";
}


    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1> <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard <small>Manage Students</small></h1>
                </div>
                <div class="col-md-2">
                    <div style="margin-top: 23px !important;">
                        <input class="form-control form-group" type="search" placeholder="Search" />
                    </div>
                </div>
            </div>


        </div>
    </header>

    <section id="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="active">Dashboard</li>qq
            </ol>
        </div>
    </section>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="index.html" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> DashBoard
                        </a>
                        <a asp-action="index" asp-controller="home" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Students <span class="badge">@_student.GetAllStudents().Count()</span></a>
                        <a asp-action="register" asp-controller="
                           account" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Register <span class="badge">33</span></a>
                        <a asp-action="index" asp-controller="home" class="list-group-item"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users <span class="badge">203</span></a>
                    </div>
                    <div class="well">
                        <h4>Disk Space Used</h4>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <h4>BanthWidth USed</h4>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                40%
                            </div>
                        </div>
                    </div>
                </div>





                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Website Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2> <span class="glyphicon glyphicon-user" aria-hidden="true"></span>@_student.GetAllStudents().Count()</h2>
                                    <h4>Students</h4>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2> <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>12</h2>
                                    <h4>Pages</h4>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2> <span class="glyphicon  glyphicon-pencil" aria-hidden="true"></span> 33</h2>
                                    <h4>Posts</h4>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="well dash-box">
                                    <h2> <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>12,450</h2>
                                    <h4>Visitors</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Latest Users -->




                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Latest Students</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Nationality</th>
                                    <th></th>
                                </tr>
                                @foreach (var student in Model)
                                {
                            <tr>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>@student.Gender</td>
                                <td>@student.Nationality</td>


                                <td class="card-footer text-center">
                                    <a asp-controller="home" asp-action="details" asp-route-id="@student.Id"
                                       class="btn btn-success m-1">View</a>
                                    <a asp-action="edit" asp-controller="home"
                                       asp-route-id="@student.Id" class="btn btn-primary m-1">Edit</a>



                                    <span id="confirmDeleteSpan @student.Id" style="display:none">
                                        <span>Are You Sure You Want to delete?</span>
                                        <button type="submit" class="btn btn-danger">Yes</button>
                                        <a href="#" class="btn btn-primary"  
                                           onclick="confirmDelete('@student.Id', false)">No</a>
                                    </span>


                                    @*<span id="deleteSpan_@student.Id">
                                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@student.Id', true)">Delete</a>
                                    </span>*@






                                <span id="deleteSpan @student.Id" >
                                    <a asp-action="delete" asp-controller="home" asp-route-id="@student.Id"
                                       onclick="confirmDelete('@student.Id', true)" class="btn btn-danger m-1">Delete</a>
                                </span>

                                </td>
                            </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>


@section Scripts {
    <script src="~/js/customScript.js"></script>
}