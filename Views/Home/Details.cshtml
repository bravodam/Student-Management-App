@model HomeDetailsViewModel




@{

    ViewBag.Title = "Student Details";
    var PhotoPath = "~/images/" + (Model.StudentClass.PhotoPath ?? "employee.png");
}


<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><i class="fa fa-cog"></i> Dashboard <small>Manage Your Student</small></h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create New
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a asp-controller="home" asp-action="create">Add New Student</a></li>
                        <li><a href="#">Search Student</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>




<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="index.html" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> DashBoard
                    </a>
                    <a asp-action="index" asp-controller="home" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Students <span class="badge">@_student.GetAllStudents().Count()</span></a>
                    <a asp-action="register" asp-controller="
                           account" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Register <span class="badge">33</span></a>
                    <a href="users.html" class="list-group-item"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users <span class="badge">203</span></a>
                </div>
                <div class="well">
                    <h4>Disk Space Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                            60%
                        </div>
                    </div>
                    <h4>BanthWidth USed</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                            40%
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-9">
                <div class="row justify-content-center m3">
                    <div class="col-sm-8">
                        <div class="card">
                            <div class="card-header">
                                <h1 class="text-center">@Model.StudentClass.Name</h1>
                            </div>

                            <div class="card-body text-center">
                                <img class="card-img-top" src="@PhotoPath" asp-append-version="true" />

                                <h5>Employee ID : @Model.StudentClass.Id</h5>
                                <h5>Email  : @Model.StudentClass.Email</h5>
                                <h5>Gender : @Model.StudentClass.Gender</h5>
                                <h5>DOB: @Model.StudentClass.DOB</h5>
                                <h5>NextOfKinName: @Model.StudentClass.NextOfKinName</h5>
                                <h5>NextOfKinPhone: @Model.StudentClass.NextOfKinPhone</h5>
                                <h5>NextOfKinAddress: @Model.StudentClass.NextOfKinAddress</h5>
                                <h5>Address  : @Model.StudentClass.Address</h5>
                                <h5>Identification : @Model.StudentClass.Identification</h5>
                                <h5>Nationality : @Model.StudentClass.Nationality</h5>
                                <h5>Phone  : @Model.StudentClass.Phone</h5>
                                <h5>Health COndition : @Model.StudentClass.HealthCondition</h5>
                                <h5>Marital Status  : @Model.StudentClass.Marital</h5>

                                <h5>Student Status : @Model.StudentClass.StudentStatus</h5>
                                <h5> Admission: @Model.StudentClass.AdmissionType</h5>

                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                                <a asp-action="edit" asp-controller="home"
                                   asp-route-id="@Model.StudentClass.Id" class="btn btn-primary">Edit</a>
                                <a href="#" class="btn btn-danger" >Delete</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
    </section>







            
            @section Scripts{
                <script src="~/js/CustomScript.js"></script>
            }
