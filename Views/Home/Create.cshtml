@model StudentCreateViewModel

@{
    ViewBag.Title = "Create Student";
}

<section id="breadcrumb">
    <div class="container mt-2">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="index.html" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> DashBoard
                    </a>
                    <a asp-action="index" asp-controller="home" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Students <span class="badge">@_student.GetAllStudents().Count()</span></a>
                    <a asp-action="register" asp-controller="
                     account" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Register <span class="badge">33</span></a>
                    <a  asp-action="login" asp-controller="account"  class="list-group-item"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span> User Login<span class="badge">203</span></a>
                </div>
                <div class="well">
                    <h4>Disk Space Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                            60%
                        </div>
                    </div>
                    <h4>BanthWidth USed</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                            40%
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <form asp-controller="Home" asp-action="Create" enctype="multipart/form-data" method="post" class="mt-3">

                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Gender"
                                    asp-items="Html.GetEnumSelectList<GenderEnum>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>

                        </div>
                    </div>



                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="DOB" class="form-control" placeholder="DOB" />
                        </div>
                    </div>



                    <div class="form-group row">
                        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Address" class="form-control" placeholder="address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Identification" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Identification" class="form-control" placeholder="identification" />
                            <span asp-validation-for="Identification" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Nationality" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Nationality"
                                    asp-items="Html.GetEnumSelectList<EnumNational>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="Nationality" class="text-danger"></span>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="Phone" class="form-control" placeholder="phone" />
                        </div>
                    </div>



                    <div class="form-group row">
                        <label asp-for="HealthCondition" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="HealthCondition" class="form-control" placeholder="health Condition" />
                        </div>
                    </div>




                    <div class="form-group row">
                        <label asp-for="Marital" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Marital"
                                    asp-items="Html.GetEnumSelectList<maritalStatus>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="Marital" class="text-danger"></span>

                        </div>
                    </div>




                    <div class="form-group row">
                        <label asp-for="StudentStatus" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="StudentStatus"
                                    asp-items="Html.GetEnumSelectList<StudentEnum>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="StudentStatus" class="text-danger"></span>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="AdmissionType" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="AdmissionType"
                                    asp-items="Html.GetEnumSelectList<admissionEnum>()">
                                <option value="">Please Select</option>
                            </select>
                            <span asp-validation-for="AdmissionType" class="text-danger"></span>



                        </div>
                    </div>



                    <div class="form-group row">
                        <label for="Photo" class="col-sm-2 col-form-label">Photo</label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input multiple asp-for="Photo" class="form-control custom-file-input" type="file" id="Photo" name="Photo" />
                                <label class="custom-file-label">Choose File...</label>
                            </div>
                        </div>
                    </div>


                    <div class="text-center text-info">NEXT OF KIN DETAILS</div>
                    <div class="form-group row">
                        <label asp-for="NextOfKinName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="NextOfKinName" class="form-control" placeholder="Next Of Kin Name " />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NextOfKinPhone" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="NextOfKinPhone" class="form-control" placeholder="Next Of Kin Phone" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NextOfKinAddress" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">

                            <input asp-for="NextOfKinAddress" class="form-control" placeholder="Next Of Kin Address" />
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>

        </div>

        </div>
    </div>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);


            });
        })

    </script>
}

